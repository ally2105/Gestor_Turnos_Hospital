@{
    ViewData["Title"] = "Request Turn";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h1 class="card-title display-4">Welcome</h1>
                    <p class="card-text">Click the button below to request a new turn.</p>
                    <form asp-action="RequestTurnPost" method="post">
                        <button type="submit" class="btn btn-primary btn-lg">Request a Turn</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
