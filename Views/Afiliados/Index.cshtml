@model IEnumerable<GestionDeTurnos.Web.Models.Affiliate>

@{
    ViewData["Title"] = "Afiliados";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 text-dark fw-bold">Gestión de Afiliados</h1>
        <p class="text-muted small mb-0">Administra los afiliados registrados en el sistema.</p>
    </div>
    <a asp-action="Crear" class="btn btn-primary shadow-sm rounded-pill px-3">
        <i class="bi bi-person-plus-fill me-2"></i>Nuevo Afiliado
    </a>
</div>

<div class="card shadow-sm border-0 overflow-hidden">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3 text-secondary text-uppercase small fw-bold border-bottom">Afiliado</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold border-bottom">Documento</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold border-bottom">Contacto</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold border-bottom">Estado</th>
                        <th class="text-end pe-4 py-3 text-secondary text-uppercase small fw-bold border-bottom">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(item.PhotoPath))
                                    {
                                        <img src="@item.PhotoPath" class="rounded-circle me-3 border shadow-sm" width="40" height="40" style="object-fit: cover;" alt="@item.FirstName" />
                                    }
                                    else
                                    {
                                        <div class="rounded-circle me-3 bg-light d-flex align-items-center justify-content-center text-secondary border" style="width: 40px; height: 40px;">
                                            <span class="fw-bold small">@item.FirstName.Substring(0,1)@item.LastName.Substring(0,1)</span>
                                        </div>
                                    }
                                    <div>
                                        <div class="fw-bold text-dark">@item.LastName, @item.FirstName</div>
                                        <div class="small text-muted font-monospace">ID: @item.Id</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark border font-monospace shadow-sm">@item.DocumentNumber</span>
                            </td>
                            <td>
                                <div class="d-flex flex-column small">
                                    @if(!string.IsNullOrEmpty(item.Email)) {
                                        <span class="text-truncate mb-1" style="max-width: 180px;" title="@item.Email">
                                            <i class="bi bi-envelope me-2 text-primary opacity-50"></i>@item.Email
                                        </span>
                                    }
                                    @if(!string.IsNullOrEmpty(item.Phone)) {
                                        <span><i class="bi bi-telephone me-2 text-success opacity-50"></i>@item.Phone</span>
                                    }
                                </div>
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-3">
                                        <i class="bi bi-check-circle-fill me-1"></i>Activo
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle rounded-pill px-3">
                                        <i class="bi bi-pause-circle-fill me-1"></i>Inactivo
                                    </span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group shadow-sm" role="group">
                                    <a asp-action="Carnet" asp-route-id="@item.Id" class="btn btn-sm btn-white border-end" title="Ver Carnet" data-bs-toggle="tooltip">
                                        <i class="bi bi-person-badge text-info"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-white border-end" title="Editar" data-bs-toggle="tooltip">
                                        <i class="bi bi-pencil text-primary"></i>
                                    </a>
                                    <!-- Botón Eliminar con Modal -->
                                    <button type="button" class="btn btn-sm btn-white text-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>

                                <!-- Modal de Confirmación -->
                                <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered modal-sm">
                                        <div class="modal-content border-0 shadow-lg overflow-hidden">
                                            <div class="modal-body text-center py-4">
                                                <div class="mb-3 text-danger bg-danger-subtle rounded-circle d-inline-flex p-3">
                                                    <i class="bi bi-trash3 display-6"></i>
                                                </div>
                                                <h5 class="fw-bold mb-2">¿Eliminar registro?</h5>
                                                <p class="small text-muted mb-4 px-3 text-center">
                                                    Estás a punto de eliminar a <br/>
                                                    <strong>@item.FirstName @item.LastName</strong>.
                                                    <br/>Esta acción no se puede deshacer.
                                                </p>
                                                
                                                <div class="d-flex gap-2 justify-content-center px-3">
                                                    <button type="button" class="btn btn-light border w-50" data-bs-dismiss="modal">Cancelar</button>
                                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="w-50">
                                                        <button type="submit" class="btn btn-danger w-100">Eliminar</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="display-1 text-muted opacity-25 mb-4"><i class="bi bi-people"></i></div>
                <h4 class="text-muted fw-normal">No hay afiliados registrados</h4>
                <p class="text-muted mb-4 small">Comienza registrando un nuevo afiliado en el sistema.</p>
                <a asp-action="Crear" class="btn btn-primary px-4 rounded-pill">
                    <i class="bi bi-plus-lg me-2"></i>Registrar Primer Afiliado
                </a>
            </div>
        }
    </div>
</div>
