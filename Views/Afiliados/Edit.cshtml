@model GestionDeTurnos.Web.Models.Affiliate

@{
    ViewData["Title"] = "Editar Afiliado";
}

<div class="row align-items-center mb-4">
    <div class="col">
        <h1 class="h3 mb-0 text-dark fw-bold">
            <i class="bi bi-pencil-square me-2 text-primary"></i>Editar Afiliado
        </h1>
        <p class="text-muted small mb-0">Actualiza la información personal y la foto del afiliado.</p>
    </div>
    <div class="col-auto">
        <a asp-action="Index" class="btn btn-light border shadow-sm">
            <i class="bi bi-arrow-left me-1"></i> Volver a la lista
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm mb-4 border-0">
            <div class="card-header bg-white py-3 border-bottom">
                <h6 class="m-0 font-weight-bold text-primary"><i class="bi bi-person-lines-fill me-2"></i>Datos Personales</h6>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4 rounded-3" role="alert"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    <input type="hidden" asp-for="PhotoPath" /> 
                    <input type="hidden" id="fotoData" name="fotoData" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label text-secondary small text-uppercase fw-bold">Nombres</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-person"></i></span>
                                <input asp-for="FirstName" class="form-control border-start-0 ps-2" placeholder="Ej: Juan Paulo" />
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label text-secondary small text-uppercase fw-bold">Apellidos</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-people"></i></span>
                                <input asp-for="LastName" class="form-control border-start-0 ps-2" placeholder="Ej: Pérez" />
                            </div>
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="DocumentNumber" class="form-label text-secondary small text-uppercase fw-bold">DNI / Documento</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-card-heading"></i></span>
                                <input asp-for="DocumentNumber" class="form-control border-start-0 ps-2" />
                            </div>
                            <span asp-validation-for="DocumentNumber" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label text-secondary small text-uppercase fw-bold">Email</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" class="form-control border-start-0 ps-2" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                             <label asp-for="Phone" class="form-label text-secondary small text-uppercase fw-bold">Teléfono</label>
                             <div class="input-group">
                                 <span class="input-group-text bg-light border-end-0"><i class="bi bi-telephone"></i></span>
                                 <input asp-for="Phone" class="form-control border-start-0 ps-2" />
                             </div>
                             <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label text-secondary small text-uppercase fw-bold">Estado</label>
                            <div class="form-check form-switch pt-2">
                                <input class="form-check-input" type="checkbox" role="switch" asp-for="IsActive" id="flexSwitchCheckChecked">
                                <label class="form-check-label" for="flexSwitchCheckChecked">
                                    @(Model.IsActive ? "Activo" : "Inactivo")
                                </label>
                            </div>
                        </div>

                        <div class="col-12 mt-4 pt-3 border-top d-flex justify-content-end gap-2">
                             <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                             <button type="submit" class="btn btn-primary px-4 shadow-sm">
                                 <i class="bi bi-save me-2"></i>Guardar Cambios
                             </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Panel de Foto -->
    <div class="col-lg-4">
        <div class="card shadow-sm mb-4 border-0">
            <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary"><i class="bi bi-camera me-2"></i>Foto de Perfil</h6>
            </div>
            <div class="card-body text-center p-4">
                <!-- Foto Actual -->
                <div class="mb-4 position-relative d-inline-block">
                    @if (!string.IsNullOrEmpty(Model.PhotoPath))
                    {
                        <img src="@Model.PhotoPath" alt="Foto Actual" class="img-thumbnail rounded-circle shadow-sm p-1" style="width: 160px; height: 160px; object-fit: cover;" id="current-photo" />
                    }
                    else
                    {
                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mx-auto mb-2 text-secondary border" style="width: 160px; height: 160px;">
                            <i class="bi bi-person-circle display-1 text-muted"></i>
                        </div>
                    }
                </div>

                <div class="d-grid gap-2">
                    <button type="button" class="btn btn-outline-primary btn-sm rounded-pill" data-bs-toggle="collapse" data-bs-target="#camera-section">
                        <i class="bi bi-camera-fill me-2"></i>Actualizar Foto
                    </button>
                </div>

                <!-- Sección de Cámara (Colapsable) -->
                <div class="collapse mt-3" id="camera-section">
                    <div class="bg-dark rounded-3 overflow-hidden mb-2 shadow-sm position-relative">
                        <video id="video" width="100%" height="auto" autoplay muted style="transform: scaleX(-1); border-radius: 8px;"></video>
                        <canvas id="canvas" style="display:none;"></canvas>
                        <div class="position-absolute top-0 end-0 m-2">
                            <span class="badge bg-danger animate-pulse">REC</span>
                        </div>
                    </div>
                    
                    <div class="btn-group w-100 mb-2" role="group">
                        <button type="button" id="start-camera" class="btn btn-sm btn-light border"><i class="bi bi-power"></i> Iniciar</button>
                        <button type="button" id="capturar" class="btn btn-sm btn-success text-white"><i class="bi bi-circle-fill small me-1"></i> Capturar</button>
                    </div>

                    <div id="preview-section" class="mt-2 text-start p-2 bg-light rounded" style="display:none;">
                        <p class="small text-muted mb-1 fw-bold">Nueva Foto:</p>
                        <img id="foto-preview" class="img-fluid rounded border shadow-sm mb-2 w-100" />
                        <button class="btn btn-danger btn-sm w-100" id="borrar-foto"><i class="bi bi-trash"></i> Descartar</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        const video = document.getElementById('video');
        const canvas = document.getElementById('canvas');
        const context = canvas.getContext('2d');
        const capturarBtn = document.getElementById('capturar');
        const startCameraBtn = document.getElementById('start-camera');
        const fotoDataInput = document.getElementById('fotoData');
        const fotoPreview = document.getElementById('foto-preview');
        const previewSection = document.getElementById('preview-section');
        const borrarFotoBtn = document.getElementById('borrar-foto');
        let stream = null;

        // Auto check isactive status
        const activeSwitch = document.getElementById('flexSwitchCheckChecked');
        const activeLabel = activeSwitch.nextElementSibling;
        activeSwitch.addEventListener('change', function() {
            activeLabel.textContent = this.checked ? "Activo" : "Inactivo";
        });

        startCameraBtn.addEventListener('click', async () => {
            try {
                if (stream) {
                    stream.getTracks().forEach(track => track.stop());
                }
                stream = await navigator.mediaDevices.getUserMedia({ video: true });
                video.srcObject = stream;
                video.play();
                startCameraBtn.classList.remove('btn-light', 'btn-outline-danger');
                startCameraBtn.classList.add('btn-primary');
                startCameraBtn.innerHTML = '<i class="bi bi-camera-video-fill"></i> Reiniciar';
            } catch (err) {
                console.error("Error accediendo a la cámara: ", err);
                alert("No se pudo acceder a la cámara. Verifique los permisos.");
            }
        });

        capturarBtn.addEventListener('click', (e) => {
            e.preventDefault();
            if (!stream || !stream.active) {
                 alert("Primero inicie la cámara.");
                 return;
            }
            canvas.width = video.videoWidth;
            canvas.height = video.videoHeight;
            context.drawImage(video, 0, 0, video.videoWidth, video.videoHeight);
            
            let dataURL = canvas.toDataURL('image/jpeg');
            fotoDataInput.value = dataURL;
            fotoPreview.src = dataURL;
            previewSection.style.display = 'block';
        });

        borrarFotoBtn.addEventListener('click', (e) => {
            e.preventDefault();
            fotoDataInput.value = "";
            fotoPreview.src = "";
            previewSection.style.display = 'none';
        });
    </script>
}
